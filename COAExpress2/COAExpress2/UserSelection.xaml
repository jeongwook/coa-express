<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="COAExpress2.UserSelection">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Logout" Clicked="OnLogoutButtonClicked" />
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<RelativeLayout BackgroundColor="White">

			<!-- Logo Image -->
			<Image Source="ispace-brand-maximized.png" Opacity="1"
				RelativeLayout.YConstraint="{ConstraintExpression 
					Type=RelativeToParent,Property=Height,Factor=0,Constant=0}"
				RelativeLayout.XConstraint="{ConstraintExpression 
					Type=RelativeToParent,Property=Width,Factor=.2,Constant=0}"
       	 		RelativeLayout.WidthConstraint="{ConstraintExpression
            		Type=RelativeToParent,Property=Width,Factor=.6,Constant=0}"
        		RelativeLayout.HeightConstraint="{ConstraintExpression
            		Type=RelativeToParent,Property=Height,Factor=.3,Constant=0}"> 
			</Image>

			<!-- Background Image -->
			<Image Source="trifecta-wallpaper-mobile-01.jpg" Opacity=".5"
				RelativeLayout.YConstraint="{ConstraintExpression 
					Type=RelativeToParent,Property=Height,Factor=0,Constant=0}"
				RelativeLayout.WidthConstraint="{ConstraintExpression
            		Type=RelativeToParent,Property=Width,Factor=1,Constant=0}"
        		RelativeLayout.HeightConstraint="{ConstraintExpression
            		Type=RelativeToParent,Property=Height,Factor=1,Constant=0}">
			</Image>

			<!-- Next Page Button -->
			<Button Text="Next" Clicked="OnNextPageClicked" BackgroundColor="#47C3D3" TextColor="White"
				RelativeLayout.YConstraint="{ConstraintExpression 
					Type=RelativeToParent,Property=Height,Factor=.85,Constant=0}"
				RelativeLayout.XConstraint="{ConstraintExpression 
					Type=RelativeToParent,Property=Width,Factor=.35,Constant=0}"
        		RelativeLayout.WidthConstraint="{ConstraintExpression
            		Type=RelativeToParent,Property=Width,Factor=.3,Constant=0}"
        		RelativeLayout.HeightConstraint="{ConstraintExpression
            		Type=RelativeToParent,Property=Height,Factor=.05,Constant=0}"/>
			
			<!-- Main Container -->
            <StackLayout 
            	RelativeLayout.YConstraint="{ConstraintExpression 
					Type=RelativeToParent,Property=Height,Factor=.25,Constant=0}"
				RelativeLayout.XConstraint="{ConstraintExpression 
					Type=RelativeToParent,Property=Width,Factor=.15,Constant=0}"
        		RelativeLayout.WidthConstraint="{ConstraintExpression
            		Type=RelativeToParent,Property=Width,Factor=.7,Constant=0}"
        		RelativeLayout.HeightConstraint="{ConstraintExpression
            		Type=RelativeToParent,Property=Height,Factor=.5,Constant=0}">
				<Label Text="Welcome to COA Express, Name." HorizontalOptions="Center"/>
				<Label Text="Please select the following:" HorizontalOptions="Center"/>

				<RelativeLayout VerticalOptions="CenterAndExpand">
					
					<!-- Pulldowns Text -->
					<StackLayout x:Name="pullDownTexts"
						RelativeLayout.XConstraint="{ConstraintExpression
							Type=RelativeToParent,Property=Width,Factor=.1,Constant=0}"
						RelativeLayout.YConstraint="{ConstraintExpression
							Type=RelativeToParent,Property=Y,Factor=.4,Constant=0}"
						RelativeLayout.WidthConstraint="{ConstraintExpression 
							Type=RelativeToParent,Property=Width,Factor=.3,Constant=0}"
						RelativeLayout.HeightConstraint="{ConstraintExpression
            				Type=RelativeToParent,Property=Height,Factor=.6,Constant=0}">
						<StackLayout VerticalOptions="CenterAndExpand">
							<Label Text="Sponsor:" Margin="0,0,0,10"/>
							<Label Text="Study:" Margin="0,0,0,10"/>
							<Label Text="Site:"/>
						</StackLayout>
					</StackLayout>
					
					<!-- Pulldowns -->
					<StackLayout x:Name="pullDowns"
						RelativeLayout.XConstraint="{ConstraintExpression
							Type=RelativeToParent,Property=Width,Factor=.4,Constant=0}"
						RelativeLayout.YConstraint="{ConstraintExpression
							Type=RelativeToParent,Property=Y,Factor=.4,Constant=0}"
						RelativeLayout.WidthConstraint="{ConstraintExpression 
							Type=RelativeToParent,Property=Width,Factor=.5,Constant=0}"
						RelativeLayout.HeightConstraint="{ConstraintExpression
            				Type=RelativeToParent,Property=Height,Factor=.6,Constant=0}">
						<StackLayout VerticalOptions="CenterAndExpand">
							<Picker x:Name="Sponsors" SelectedIndex="{Binding Sponsors}">
                                <Picker.Items>
                                    <x:String>Lakers</x:String> 
                                    <x:String>Barcelona</x:String>
                                </Picker.Items> 
                            </Picker> 
                            <Picker x:Name="Studies" SelectedIndex="{Binding Studies}">
                                <Picker.Items>
                                    <x:String>Basketball</x:String> 
                                    <x:String>Soccer</x:String>
                                </Picker.Items> 
                            </Picker> 
							<Picker x:Name="Sites" SelectedIndex="{Binding Sponsors}">
                                <Picker.Items>
                                    <x:String>Los Angeles</x:String> 
                                    <x:String>Barcelona</x:String>
                                </Picker.Items> 
                            </Picker> 
						</StackLayout>
					</StackLayout>
					
				</RelativeLayout>
				
			</StackLayout>
		</RelativeLayout>
	</ContentPage.Content>
</ContentPage>
